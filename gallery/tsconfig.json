{
  "compileOnSave": false,
  "compilerOptions": {
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "module": "ES2015",
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "downlevelIteration": true,
    "target": "es5",
    "baseUrl": "./",   
    "paths": {
      "@pp/utils/*": ["../utils/*"],
      "@pp/server/*": ["../server/*"],
      "@pp/api/*": ["../api/*"]
    },   
    "typeRoots": [
      "./node_modules/@types",
      "./../node_modules/@types"
    ],
    "lib": [
      "es2017",
      "dom",
      "es5",
      "es2015"
    ]
  }
}